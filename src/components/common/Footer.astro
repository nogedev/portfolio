---
import ConnectLinks from "@/components/common/ConnectLinks.astro";
import ButtonLink from "@/components/ui/ButtonLink.astro";
import ExternalLink from "@/components/ui/ExternalLink.astro";
---

<footer class="bg-black tracking-tighter">
  <div
    class="mx-auto flex h-screen max-w-7xl flex-col justify-between px-4 py-16 sm:px-6 lg:px-8"
  >
    <div class="w-max sm:ml-auto md:text-left">
      <ConnectLinks
        labelColorText="text-white/75"
        linkColorText="text-white"
        hoverColorText="hover:text-white/40"
      />
    </div>
    <div class="space-y-8">
      <div class="flex flex-col gap-2">
        <h2 class="text-title-3 text-white">
          Curious about what we can create together?
        </h2>
        <h2 class="text-title-3 text-white">
          Let’s bring something extraordinary to life!
        </h2>
      </div>
      <div class="flex items-center space-x-10">
        <ButtonLink href="/contact" variant="onDark" class="uppercase">
          Get in touch
        </ButtonLink>
        <div class="flex items-center gap-4">
          <div class="-mt-1">
            <span class="relative flex size-2">
              <span
                class="absolute inline-flex h-full w-full animate-ping rounded-full bg-green-400 opacity-75"
              ></span>
              <span
                class="relative inline-flex size-2 rounded-full bg-green-500"
              ></span>
            </span>
          </div>
          <div>
            <p class="text-xsmall uppercase text-white">Available for work</p>
          </div>
        </div>
      </div>
    </div>
    <div
      class="flex flex-col gap-8 text-white md:flex-row md:items-center md:justify-between md:gap-0"
    >
      <div class="flex flex-col gap-8 md:flex-row md:items-center md:gap-16">
        <div>
          <p class="text-xsmall uppercase">Powered by</p>
          <p class="text-xsmall uppercase">Astro • TailwindCSS</p>
        </div>
      </div>
      <div class="md:text-right">
        <p class="text-xsmall uppercase">All rights reserved</p>
        <p class="text-xsmall uppercase">NOGE © {new Date().getFullYear()}</p>
      </div>
    </div>
  </div>
</footer>
