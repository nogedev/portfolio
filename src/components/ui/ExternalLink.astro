---
type Props = {
  href: string;
  text: string;
  className?: string;
  textClassName?: string;
};

const { href, text, className = "", textClassName = "" } = Astro.props as Props;

const baseLinkClasses =
  "group inline-flex items-center tracking-tighter gap-1.5 text-lg font-medium uppercase transition-all duration-300 ease-in-out";
const linkColor = "text-black hover:text-black/40";
const combinedClassName = `${baseLinkClasses} ${linkColor} ${className}`;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={combinedClassName}
>
  <span class={`leading-none ${textClassName}`}>{text}</span>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="size-5 rotate-45 mb-1 transition-all duration-300 ease-in-out group-hover:scale-110"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M15.042 21.672 13.684 16.6m0 0-2.51 2.225.569-9.47 5.227 7.917-3.286-.672ZM12 2.25V4.5m5.834.166-1.591 1.591M20.25 10.5H18M7.757 14.743l-1.59 1.59M6 10.5H3.75m4.007-4.243-1.59-1.59"
    ></path>
  </svg>
</a>
