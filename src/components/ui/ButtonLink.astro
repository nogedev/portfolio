---
type Props = {
  href: string;
  variant?: "default" | "dark" | "outline" | "onDark";
  size?: "sm" | "md" | "lg";
  external?: boolean;
  class?: string;
};

const {
  href,
  variant = "default",
  size = "md",
  external = false,
  class: className = "",
  ...rest
} = Astro.props;

const base =
  "inline-flex tracking-tighter items-center justify-center whitespace-nowrap font-medium transition-all duration-300 ease-in-out flex-shrink-0 uppercase";

const variants = {
  default: "bg-gray-100 text-black hover:bg-black hover:text-white",
  dark: "bg-black text-white hover:bg-gray-100 hover:text-black",
  outline: "border border-black text-black hover:bg-black hover:text-white",
  onDark: "bg-white text-black",
};

const sizes = {
  sm: "px-4 py-2 text-sm",
  md: "px-6 py-4",
  lg: "px-8 py-5 text-lg",
};

const computedClass = `${base} ${variants[variant]} ${sizes[size]} ${className}`;
const extraAttrs = external
  ? { target: "_blank", rel: "noopener noreferrer" }
  : {};
---

<a href={href} class={computedClass} {...extraAttrs} {...rest}>
  <slot />
</a>
